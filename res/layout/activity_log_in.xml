<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.LogInActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_chat_black_24dp"/>

    <LinearLayout
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_all_element"

        >
    <EditText
        android:id="@+id/email_etext"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/pass_etext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="password"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/pass_repeat_etext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="repeat password"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/login_etext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="login"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Sign up"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/toogle_sign_up_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="toogleSignMode"
            android:text="Tap to login"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>